<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Projectid</th>
    <th>Username</th>
    <th>Tasks</th>
    <th>Deadline</th>
    <th>Status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.ProjectID %></td>
    <td><%= task.UserName %></td>
    <td><%= task.Tasks %></td>
    <td><%= task.Deadline %></td>
    <td><%= task.Status %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Task', new_task_path %>
<br/>
<%= link_to 'Tasklist', :controller => 'users', :action => 'tasklist', :user => 'admin' %>
<br/>
<%= link_to 'End Session', login_path %>
